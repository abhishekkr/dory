echo 'apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: dory
spec:
  replicas: 1
  revisionHistoryLimit: 1
  template:
    metadata:
      labels:
        app: dory
    spec:
      containers:
      - name: dory
        image: docker.io/abhishekkr/dory:latest
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
        env:
        - name: SERVICE_VERSION
          value: "0.3"
        - name: DORY_HTTP
          value: ":8080"
' | kubectl create -f -
